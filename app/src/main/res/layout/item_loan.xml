<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity"
    android:id="@+id/loan_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TableRow
        android:id="@+id/amount_and_period_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/simple_loan_amount_title"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_amount"/>

        <TextView
            android:id="@+id/simple_loan_amount"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/simple_loan_amount_currency"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_rub"/>

        <TextView
            android:id="@+id/simple_loan_days_title"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_period"/>

        <TextView
            android:id="@+id/simple_loan_days"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/simple_loan_days_text"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_days"/>
    </TableRow>

    <TableRow
        android:id="@+id/percentage_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loan_percent_title"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_percentages"/>

        <TextView
            android:id="@+id/loan_percent"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/loan_percent_text"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_percentage_sign"/>
    </TableRow>

    <TableRow
        android:id="@+id/state_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loan_state_title"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_state" />

        <TextView
            android:id="@+id/loan_status_text"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        android:id="@+id/date_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loan_date_title"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_info_date"/>

        <TextView
            android:id="@+id/loan_date_text"
            style="@style/loanInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <ImageView
        android:id="@+id/loan_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/loan_list_divider_shape"
        android:contentDescription="@string/loan_list_divider"
      />

</LinearLayout>